{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Inference RPS",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(aquilia_inference_total[1m])",
          "legendFormat": "{{model}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "title": "Inference Latency (p50 / p95 / p99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(aquilia_inference_latency_ms_bucket[5m]))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(aquilia_inference_latency_ms_bucket[5m]))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(aquilia_inference_latency_ms_bucket[5m]))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms"
        }
      }
    },
    {
      "title": "Active Models",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "aquilia_active_models",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Error Rate",
      "type": "gauge",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(aquilia_inference_errors_total[5m]) / rate(aquilia_inference_total[5m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "steps": [
              { "value": 0, "color": "green" },
              { "value": 0.01, "color": "yellow" },
              { "value": 0.05, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "title": "Batch Utilisation",
      "type": "timeseries",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "aquilia_batch_size_avg",
          "legendFormat": "avg batch size",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Replicas (HPA)",
      "type": "timeseries",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "kube_deployment_status_replicas{deployment='aquilia-model-server'}",
          "legendFormat": "current",
          "refId": "A"
        },
        {
          "expr": "kube_deployment_spec_replicas{deployment='aquilia-model-server'}",
          "legendFormat": "desired",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Data Drift — PSI Score by Feature",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "aquilia_drift_psi{model=\"$model\"}",
          "legendFormat": "{{feature}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "value": 0, "color": "green" },
              { "value": 0.1, "color": "yellow" },
              { "value": 0.2, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "title": "Rollout Progress",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "aquilia_rollout_target_weight{model=\"$model\"}",
          "legendFormat": "target traffic %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "max": 1,
          "thresholds": {
            "steps": [
              { "value": 0, "color": "blue" },
              { "value": 0.5, "color": "green" },
              { "value": 1, "color": "green" }
            ]
          }
        }
      }
    },
    {
      "title": "Registry — Pack Count",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 20 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "aquilia_registry_packs_total",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Registry — Storage Used",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 8, "y": 20 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "aquilia_registry_storage_bytes",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },
    {
      "title": "Plugin Status",
      "type": "table",
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 20 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "aquilia_plugin_state",
          "format": "table",
          "refId": "A"
        }
      ]
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["aquilia", "mlops", "models"],
  "templating": {
    "list": [
      {
        "name": "model",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(aquilia_inference_total, model)",
        "refresh": 1
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "title": "Aquilia MLOps Dashboard",
  "uid": "aquilia-mlops-overview",
  "version": 1
}
