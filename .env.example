# Aquilia Framework â€” Environment Variables
# Copy this file to .env and fill in values.

# ============================================================================
# Auth / JWT
# ============================================================================

# REQUIRED in non-dev mode. 256-bit random key for HS256 JWT signing.
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
AQ_AUTH__TOKENS__SECRET_KEY=

# JWT algorithm (default: HS256). Options: HS256, RS256, ES256
# AQ_AUTH__TOKENS__ALGORITHM=HS256

# JWT issuer and audience
# AQ_AUTH__TOKENS__ISSUER=aquilia
# AQ_AUTH__TOKENS__AUDIENCE=aquilia-app

# ============================================================================
# Sessions
# ============================================================================

# Encryption key for session data. 32+ characters recommended.
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_ENCRYPTION_KEY=

# ============================================================================
# Runtime
# ============================================================================

# Server mode: dev, staging, production
# AQ_RUNTIME__MODE=dev

# Server bind address
# AQ_RUNTIME__HOST=127.0.0.1
# AQ_RUNTIME__PORT=8000

# ============================================================================
# Database (if applicable)
# ============================================================================

# DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/aquilia_db
# REDIS_URL=redis://localhost:6379/0
